
<!DOCTYPE html>
<html lang="en">

<% include ../partial/head %>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <% include ../partial/sidebar %>

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <% include ../partial/topbar %>

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <h1>Post Details</h1>
          Title: <%= post.title %> <p>
          Content : <%= post.content %> <p>
          Author : <%= post.author %> <p>
          <a href="/posts/postupdate/<%= post._id %>"><button type="button" name="button">Update</button></a>
          <button type="button" onclick="ch();" name="button">Delete</button>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <% include ../partial/footer %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login.html">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <!-- Page level plugins -->
  <% include ../partial/script %>

</body>
<script type="text/javascript">
  function ch() {
    var op = confirm('Are you sure?');
    if(op){
      location.href = '/posts/postdel/<%= post._id%>';
    }
  }
</script>

</html>
